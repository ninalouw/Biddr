
<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <%= @auction.errors.full_messages.join(', ') %>
    <%= form_for @auction do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ends_on %>
        <%= f.text_field :ends_on, class: "form-control datepicker" %>
      </div>
      <div class="form-group">
        <%= f.label :reserve_price %>
        <%= f.text_field :reserve_price, class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-default" %>
    <% end %>
  </div>
</div>
