<!DOCTYPE html>
<html>
  <head>
    <title>Biddr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
      <div class="navbar-header">
        <button
          type="button"
          class="navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#biddr-navbar">
        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
      </button>
      <span
      class="glyphicon glyphicon-dashboard navbar-brand"
      aria-hidden="true"></span>
      </div>

      <div class="navbar-collapse collapse" id="biddr-navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'New Auction', new_auction_path %></li>
          <li><%= link_to 'Auctions', auctions_path %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <p class="navbar-text">Hello, <%= current_user.first_name %></p>
            </li>
            <li>
              <%= button_to 'Sign out',
                sessions_path,
                method: :delete,
                class: 'btn btn-default navbar-btn'
                %>
              </li>
          <% else %>
          <div class="dropdown">
            <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Sign In or Sign Up
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><%= link_to 'Sign up with Email', new_user_path %></li>
              <li><%= link_to 'Sign In', new_session_path %></li>
              <li><%#= link_to 'Sign In with Twitter', sign_in_with_twitter_path %></li>
            <% end %>
            </ul>
          </div>
        </ul>
      </div>
      </div>
    </nav>

    <div class="container-fluid">
      <% if notice || alert %>
        <div
          class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable"
          role="alert">
          <%= notice || alert %>
          <%# add x button to close notification element %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <%= yield %>
    </div>
 </body>
</html>
